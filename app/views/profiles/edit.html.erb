<div class='mx-1'>
  <%= form_with model: @user, url: profile_path do |f| %>
    <%= f.label :nickname %>
    <%= f.text_field :nickname, class: "w-full p-1 border rounded" %>
    <%= f.submit class: "px-3 py-1 border rounded cursor-pointer bg-blue-700 hover:bg-blue-600 text-white transition" %>
  <% end %>
</div>
